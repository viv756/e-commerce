<%- include('../layouts/header.ejs') %>

         <div class="container">
            <div class="main-body">
                <div class="row gutters-sm">
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex flex-column align-items-center text-center">
                                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin"
                                        class="rounded-circle" width="150">
                                    <div class="mt-3">
                                        <% if(locals.data) {%>
                                            <h4>
                                                <%= data.name %>
                                            </h4>
                                            <p class="text-secondary mb-1">
                                                <%= data.email %>
                                            </p>
                                            <%} %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    
                    </div>
                    <div class="col-md-8">
                        <div class="card mb-3">
                            <div class="card-body">
                                <% if(locals.data) { %>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Full Name </h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            <%= data.name %>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Email</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            <a href="/cdn-cgi/l/email-protection" class="__cf_email__"
                                                data-cfemail="85e3ecf5c5eff0eee8f0edabe4e9">
                                                <%= data.email %>
                                            </a>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Address</h6>
                                        </div>
                                        <% if(data.address) { %>
                                            <div class="card-body custom-card">
                                                <div class="mt-3 mb-3 p-4 rounded border custom-card-item">
                                                    <div class="mb-2">
                                                        <strong>Primary Number:</strong>
                                                        <%= data.address[0] ? data.address[0].number : 'N/A' %><br>
                                                            <strong>Alternate Number:</strong>
                                                            <%= data.address[0] ? data.address[0].altNumber : 'N/A' %><br>
                                                    </div>
                                                    <div class="mb-2">
                                                        <strong>Pincode:</strong>
                                                        <%=data.address[0] ? data.address[0].pincode : 'N/A'%><br>
                                                            <strong>House:</strong>
                                                            <%= data.address[0] ? data.address[0].house : 'N/A' %><br>
                                                                <strong>Area:</strong>
                                                                <%= data.address[0] ? data.address[0].area : 'N/A' %><br>
                                                                    <strong>Landmark:</strong>
                                                                    <%= data.address[0] ? data.address[0].landmark : 'N/A' %><br>
                                                                        <strong>Town:</strong>
                                                                        <%= data.address[0] ? data.address[0].town : 'N/A' %><br>
                                                                            <strong>State:</strong>
                                                                            <%= data.address[0] ? data.address[0].state : 'N/A' %><br>
                                                    </div>
                                                </div>
                                            </div>

                                            <% } %>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <a class="btn btn-info " target="__blank"
                                                href="/EditproFile">Edit</a>
                                        </div>
                                    </div>
                            </div>
                            <%} %>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div> 
       
        
        <style type="text/css">
            body {
                margin-top: 20px;
                color: #1a202c;
                text-align: left;
                /* background-color: #e2e8f0;     */
            }

            .main-body {
                padding: 15px;
            }

            .card {
                box-shadow: 0 1px 3px 0 rgba(0, 0, 0, .1), 0 1px 2px 0 rgba(0, 0, 0, .06);
            }

            .card {
                position: relative;
                display: flex;
                flex-direction: column;
                min-width: 0;
                word-wrap: break-word;
                background-color: #fff;
                background-clip: border-box;
                border: 0 solid rgba(0, 0, 0, .125);
                border-radius: .25rem;
            }

            .card-body {
                flex: 1 1 auto;
                min-height: 1px;
                padding: 1rem;
            }

            .gutters-sm {
                margin-right: -8px;
                margin-left: -8px;
            }

            .gutters-sm>.col,
            .gutters-sm>[class*=col-] {
                padding-right: 8px;
                padding-left: 8px;
            }

            .mb-3,
            .my-3 {
                margin-bottom: 1rem !important;
            }

            .bg-gray-300 {
                background-color: #e2e8f0;
            }

            .h-100 {
                height: 100% !important;
            }

            .shadow-none {
                box-shadow: none !important;
            }
        </style>
        <script data-cfasync="false" src="/cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"></script>
        <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.bundle.min.js"></script>
        <script type="text/javascript">

        </script>
